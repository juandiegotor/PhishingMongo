extends ./layout.jade
block contenido
  
  h1 User 
  h2
    a(href="/Add/addUser") Crear usuario   
  form(action="/user/search",method="POST" )
    input(type="text",name="search",placeholder="Search",id="search",class="form-control")
    div(class="row top-space")
       div(class="col-xs-12 col-sm-6")
         input(type="submit" value="Buscar" class="btn btn-info")
    

  
    
  div(class="container")       
    for user in users
      div
        .white.border.tr.large-padding
          .row
            .col-md-10
              h4 Nombre: #{user.name}  identification #{user.identification}
              .col-md-2
            
                  a(href="/delete/user/#{user._id}" class="right-space" ) Eliminar  
                  a(href="/edit/editUser/#{user._id}" ) Editar  
            
        
